<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/edittext"
    android:orientation="vertical"
    tools:context="com.example.sendy.ahirodent.CreateEventActivity$PlaceholderFragment">


        <EditText
            android:id="@+id/et_event_name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Title Of Your Event"
            android:background="@drawable/background"
            android:singleLine="true"
            android:ems="10"
            android:textColor="#3f4b9c"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/et_event_msg"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/background"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Massage"
            android:inputType="textMultiLine"
            android:ems="10"
            android:textColor="#3f4b9c" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:padding="10dp"
        android:maxLines="1"
        android:editable="false"
        android:clickable="true"
        android:focusable="false"
        android:hint="Set Event Last Date" />

    <Button
        android:text="Create Event"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        android:background="@drawable/btnbackground"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/create_event_btn" />


</LinearLayout>
